@model GameStore.Data.Data.CMS.FooterLinks

@{
    ViewData["Title"] = "Edit";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="align-items-center justify-content-between mb-4">
        <h1>Stopka link - edytuj</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdFooterLink" />
            <div class="form-group">
                <label asp-for="Title" class="control-label font-weight-bold"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <hr class="my-4"/>
            <div class="form-group">
                <label asp-for="Position" class="control-label font-weight-bold"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <hr class="my-4"/>
            <div class="form-group">
                <label asp-for="Link" class="control-label font-weight-bold"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <hr/>

            <div class="form-group">
                <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i></button> |
                <a asp-action="Index" class="btn btn-dark"><i class="bi bi-arrow-left"></i></a>
            </div>
        </form>
    </div>
</div>

    </div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
