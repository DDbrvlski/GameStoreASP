@model GameStore.Data.Data.Media.Images

@{
    ViewData["Title"] = "Details";
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="align-items-center justify-content-between mb-4">
        <h1>Zdjęcie - szczegóły</h1>

        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2 my-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10 my-2">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2 my-2">
                    @Html.DisplayNameFor(model => model.Product.Name)
                </dt>
                <dd class="col-sm-10 my-2">
                    @Html.DisplayFor(model => model.Product.Name)
                </dd>
                <dt class="col-sm-2 my-2">
                    @Html.DisplayNameFor(model => model.Position)
                </dt>
                <dd class="col-sm-10 my-2">
                    @Html.DisplayFor(model => model.Position)
                </dd>
                <dt class="col-sm-2 my-2">
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>
                <dd class="col-sm-10 my-2">
                    @Html.DisplayFor(model => model.IsActive)
                </dd>
                <dt class="col-sm-2 my-2">
                    @Html.DisplayNameFor(model => model.ImageFile)
                </dt>
                <dd class="col-sm-10 my-2">
                    @if (@Model.Image == @Model.Name)
                    {
                        <img src="~/images/@Model.Name" alt="@Model.Name" style="height: 90px; width: 90px;"/>
                    }
                    else
                    {
                        <img src="@Model.Image" alt="@Model.Name" style="height: 90px; width: 50%;"/>
                    }
                </dd>
            </dl>
        </div>
        <hr />
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.IdImage" class="btn btn-dark"><i class="bi bi-pencil"></i></a> |
            <a asp-action="Index" class="btn btn-dark"><i class="bi bi-arrow-left"></i></a>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
