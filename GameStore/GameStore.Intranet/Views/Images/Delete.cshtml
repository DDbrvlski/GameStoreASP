@model GameStore.Data.Data.Media.Images

@{
    ViewData["Title"] = "Delete";
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="align-items-center justify-content-between mb-4">
        <h1>Zdjęcie - usuń</h1>

        <h3 class="text-danger">Czy na pewno chcesz usunąć ten element?</h3>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2 my-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10 my-2">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2 my-2">
                    @Html.DisplayNameFor(model => model.Product.Name)
                </dt>
                <dd class="col-sm-10 my-2">
                    @Html.DisplayFor(model => model.Product.Name)
                </dd>
                <dt class="col-sm-2 my-2">
                    @Html.DisplayNameFor(model => model.Position)
                </dt>
                <dd class="col-sm-10 my-2">
                    @Html.DisplayFor(model => model.Position)
                </dd>
                <dt class="col-sm-2 my-2">
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>
                <dd class="col-sm-10 my-2">
                    @Html.DisplayFor(model => model.IsActive)
                </dd>
                <dt class="col-sm-2 my-2">
                    @Html.DisplayNameFor(model => model.ImageFile)
                </dt>
                <dd class="col-sm-10 my-2">
                    @if (@Model.Image == @Model.Name)
                    {
                        <img src="~/images/@Model.Name" alt="@Model.Name" style="height: 90px; width: 90px;" />
                    }
                    else
                    {
                        <img src="@Model.Image" alt="@Model.Name" style="height: 90px; width: 50%;" />
                    }
                </dd>
            </dl>
            <hr />
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdImage" />
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i></button> |
                <a asp-action="Index" class="btn btn-dark"><i class="bi bi-arrow-left"></i></a>
            </form>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->