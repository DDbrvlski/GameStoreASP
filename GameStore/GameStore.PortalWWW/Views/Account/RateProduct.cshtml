@model GameStore.Data.Data.Shop.RatesProductsAccounts
@{
    ViewData["Title"] = "Oceń produkt";

}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<style>
    .rating input[type="radio"] {
        display: none;
    }

    .rating .thumbs-up-icon {
        cursor: pointer;
        font-size: 42px;
        color: gray;
    }

    .rating .thumbs-down-icon {
        cursor: pointer;
        font-size: 42px;
        color: gray;
    }

    .rating input[type="radio"]:checked + .thumbs-up-icon {
        color: green;
    }

    .rating input[type="radio"]:checked + .thumbs-down-icon {
        color: red;
    }
</style>

<body style="background-image: url('/lib/materialize/register.jpg'); background-size: cover">
    <div class="container" style="margin-top:95px;">
        <div class="row">
            <div class="col s12 m6 offset-m1" style="margin-top:60px; margin-bottom:60px;">
                <div class="card-panel z-depth-5" style="min-width:70rem;min-height:30rem">
                    <div class="row">
                        <div class="col s12 m5">
                            <a asp-action="Details" asp-controller="Shop" asp-route-id="@Model.IdProduct"><img src="~/images/@Model.Product.Image.Image" style="border-radius:7px;" class="materialboxed responsive-img" width="355" /></a>
                            <h5>@Model.Product.Name</h5>
                        </div>
                        <div class="col s12 m7">
                            <form asp-action="RateProduct" method="post">
                                <input asp-for="IdRatesProductsAccounts" type="hidden" />
                                <div class="rating center" style="letter-spacing:2rem; margin-bottom:2rem">
                                    <label>
                                        <input type="radio" name="rate" value="@ViewBag.PozytywnaOcena" @(Model.Rate != null ? Model.Rate.Rating == "Pozytywna" ? "checked" : "" : "") />
                                        <i class="fas fa-thumbs-up thumbs-up-icon"></i>
                                    </label>
                                    <label>
                                        <input type="radio" name="rate" value="@ViewBag.NegatywnaOcena" @(Model.Rate != null ? Model.Rate.Rating == "Negatywna" ? "checked" : "" : "") />
                                        <i class="fas fa-thumbs-down thumbs-down-icon"></i>
                                    </label>
                                </div>
                                <div class="card-panel">
                                    <div class="input-field">
                                        <textarea id="comment" name="comment" style="height:13rem; max-height:13rem; overflow:auto" class="materialize-textarea">@(Model.Comment != null ? Model.Comment.CommentContent : "")</textarea>
                                        <label for="comment">Komentarz</label>
                                    </div>
                                    <button class="btn waves-effect waves-light" type="submit" name="action">Dodaj ocenę</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div><!--col-->
        </div><!--row-->
    </div><!--conatiner-->
    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>
</body>

