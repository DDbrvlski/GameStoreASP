@model GameStore.Data.Data.Account.Accounts
@{
    ViewData["Title"] = "Zmiana hasła";
}

<body style="background-image: url('/lib/materialize/register.jpg'); background-size: cover">
    <div class="container" style="margin-top:95px;">
        <div class="row">
            <div class="col s12 m6 offset-m3" style="margin-top:60px; margin-bottom:60px;">
                <div class="card-panel z-depth-5">
                    <div class="row">
                        <div class="col s12">
                            <h4>Zmiana hasła</h4>
                        </div>
                    </div>
                    <form method="post" asp-controller="Account" asp-action="ChangePassword">
                        <input type="hidden" asp-for="IdAccount" />
                        <div class="row">
                            <div class="col s6">
                                <label for="OldPassword" class="control-label font-weight-bold">Stare hasło:</label>
                                <input name="OldPassword" id="OldPassword" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                <label asp-for="Password" class="control-label font-weight-bold"></label>
                                <input asp-for="Password" class="form-control" value="" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12">
                                @{
                                    var UserId = ViewBag.UserId;
                                }
                                <button type="submit" class="btn waves-effect waves-light">Zapisz zmiany</button>
                                <a href="/Account/AccountDetails/@UserId" class="btn waves-effect waves-light">Anuluj</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div><!--col-->
        </div><!--row-->
    </div><!--conatiner-->
    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>
</body>

