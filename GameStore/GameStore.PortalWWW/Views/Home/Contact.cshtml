@model GameStore.Data.Data.CMS.Page
@{
    ViewData["Title"] = @Model.TitleLink;
}


<body style="background-image: url('/lib/materialize/contact.jpg'); background-size: cover">


    <div class="container" style="margin-top:145px;">
        <div class="card-panel z-depth-5" style="margin-top:85px;">
            <div class="row" >
                <div class="col s12 m6">
                    <h4 class="center">@Model.Content</h4>
                    <div class="row">
                        <form class="col s12 m12">
                            <div class="row">
                                @await Html.PartialAsync("PageContent", (IEnumerable<GameStore.Data.Data.CMS.PageContent>) ViewBag.PageInputs)


                            </div><!--row-->
                        </form>

                    </div><!--row-->
                    @await Html.PartialAsync("PageContent", (IEnumerable<GameStore.Data.Data.CMS.PageContent>) ViewBag.PageButtons)
                </div><!--col-->
                <div class="col s12 m5 offset-m1">
                    <label for="icon_prefix2">@ViewBag.TextTitle</label>
                    <i class="mdi-editor-mode-edit prefix"></i>
                    <textarea id="icon_prefix2" class="materialize-textarea"></textarea>

                </div>

            </div><!--row-->
        </div><!--card-->
    </div><!--conatiner-->
    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>

    <div style="background-image: url('~/lib/materialize/mainbackground.jpg'); width: 100%; height: 100%;"></div>
</body>
