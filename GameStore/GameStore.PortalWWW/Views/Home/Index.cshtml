@model GameStore.Data.Data.CMS.Page
@{
    ViewData["Title"] = @Model.TitleLink;
}

<div id="index-banner" class="parallax-container" style="min-height: 100vh">
    <div class="section no-pad-bot">
        <div class="title-main-page">
            <br><br>
            <h1 class="header center text-shadow">@Model.Content</h1>
            <br><br>
        </div>
    </div>
    <div class="parallax"><img src="~/lib/materialize/mainbackground.jpg" alt="Unsplashed background img 1" style="transform: translate3d(-50%, 403.862px, 0px); opacity: 1;"></div>
</div>
<div class="parallax-container valign-wrapper z-depth-3">
    <div class="section no-pad-bot">
        <div class="container">
            <div class="row center">
                <h5 class="header center text-shadow red-text">@ViewBag.NewsTitle</h5>
            </div>
        </div>
    </div>
    <div class="parallax"><img src="~/lib/materialize/news.jpg" alt="Unsplashed background img 2" style="transform: translate3d(-50%, 403.862px, 0px); opacity: 1;"></div>
</div>
<div class="container" style="min-height: 80vh;">
    <div class="section">
        <div class="row">
            @await Html.PartialAsync("News", (IEnumerable<GameStore.Data.Data.CMS.News>) ViewBag.News)
        </div>
    </div>
</div>
<div class="parallax-container valign-wrapper z-depth-3">
    <div class="section no-pad-bot">
        <div class="container">
            <div class="row center">
                <h5 class="header center text-shadow red-text">@ViewBag.SaleTitle</h5>
            </div>
        </div>
    </div>
    <div class="parallax"><img src="~/lib/materialize/sale.jpg" alt="Unsplashed background img 2" style="transform: translate3d(-50%, 403.862px, 0px); opacity: 1;"></div>
</div>
<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12 center">
                <h3><i class="mdi-content-send brown-text"></i></h3>
                <h4></h4>
                <p class="left-align light"></p>
            </div>
        </div>
    </div>
</div>
<div class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
        <div class="container">
            <div class="row center">
                <h5 class="header col s12 light">A modern responsive front-end framework based on Material Design</h5>
            </div>
        </div>
    </div>
    <div class="parallax"><img src="background3.jpg" alt="Unsplashed background img 3"></div>
</div>