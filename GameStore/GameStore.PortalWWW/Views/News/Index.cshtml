@model GameStore.Data.Data.CMS.News
@{
    ViewData["Title"] = @Model.TitleLink;
}

<body style="background-image: url('/lib/materialize/newsbackground.jpg'); background-size: cover">
    <div class="container" style="margin-top:125px; min-height:67vh;">
        <div class="row">
            <div class="col s12 m6 offset-m3">
                <div class="card-panel z-depth-5" style="margin: 60px -50px 0px -50px">
                    <h4 class="center">@Model.Title</h4>
                    <div class="row" style="margin-top:55px;">
                        @Html.Raw(@Model.Content)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>
</body>

