@model IEnumerable<GameStore.Data.Data.Shop.RatesProductsAccounts>

<div class="row">
    <div class="col s12">
        <h4 style="margin-left: 40px;">Opinie</h4>
        <hr style="margin: 0px 40px 0 40px;" />
        
    @if (Model != null)
        {
            @foreach (var comment in Model){
            var color = "";
            if (@comment.Rate.IdRate == 1)
            {
                color = "#D5EDFF";
            }
            else
            {
                color = "#FFB4A2";
            }
        <div class="card" style="border-radius:7px; width: auto; margin: 20px 40px 0 40px; background-color: @color;">
            <div class="card-content">
                <div class="row">
                    <div class="col s1">
                        <img src="~/lib/materialize/person-icon.jpg" alt="User Image" class="circle responsive-img">
                    </div>
                    <div class="col s11">
                        <span class="title">@comment.Account.UserName</span>
                        <span class="right">@comment.CreatedDate</span>
                        <p>Ocena użytkownika: <b>@comment.Rate.Rating</b></p>
                    </div>
                </div>
                <hr />
                <p>@comment.Comment.CommentContent</p>
            </div>
        </div>
        }
        }
    </div>
</div>


